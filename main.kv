<Wid_Alfa>:
    size_hint: 1, 1
    height: 500
    width: 500
    cols: 3
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 1,1
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 0.5,0,1
            Rectangle:
                size: self.size
                pos: self.pos
         
        GridBack:
            id:grid_botones
            padding : 30
            margin : 30 
            
        Label:
            id: label
            text: "TaTeTi" 
            size_hint: 1,.2
            height: '48dp'
            text_size: self.width, None
            halign: 'center'
            valign: 'center'
        BoxLayout:
            size_hint: 1,.3
            orientation: 'vertical'
            padding: '20dp'
            canvas:
                Color:
                    rgb: 1,1,1
                Rectangle:
                    size: self.size
                    pos: self.pos
            Button:
                id: reiniciar
                text: "Reiniciar"
                size_hint: .5,.5
                on_release: self.parent.parent.parent.reiniciar()
                
        

<GridBack>:
    padding : 30
    size_hint: 1,1
    spacing: 10
    pos_hint: {'center_x': 0.5}
    rows: 4
    canvas:
